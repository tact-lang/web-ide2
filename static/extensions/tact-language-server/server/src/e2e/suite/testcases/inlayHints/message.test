========================================================================
Single Message
========================================================================
primitive Int;
message Foo {
   a: Int;
}
------------------------------------------------------------------------
primitive Int;
message Foo {
   a: Int/*  as int257 */;
}

========================================================================
Message with many types
========================================================================
primitive Int;
message Foo {
   a: Int;
   b: Int;
}
------------------------------------------------------------------------
primitive Int;
message Foo {
   a: Int/*  as int257 */;
   b: Int/*  as int257 */;
}

========================================================================
Message with uint*
========================================================================
primitive Int;
message Foo {
   a: Int;
   b: Int;
   c: Int as uint32;
   d: Int as coins;
}
------------------------------------------------------------------------
primitive Int;
message Foo {
   a: Int/*  as int257 */;
   b: Int/*  as int257 */;
   c: Int as uint32;
   d: Int as coins;
}

========================================================================
No hint for optional
========================================================================
primitive Int;
message Foo {
   a: Int?;
   b: Address?;
}
------------------------------------------------------------------------
primitive Int;
message Foo {
   a: Int?;
   b: Address?;
}
