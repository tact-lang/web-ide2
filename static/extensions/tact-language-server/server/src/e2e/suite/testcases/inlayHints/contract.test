========================================================================
Show method ID in contract
========================================================================
primitive Int;

contract Foo {
    get fun bar(){
        const a: Int;
    }
}
------------------------------------------------------------------------
primitive Int;

contract Foo {
    get/* (0x1ab79) */ fun bar(){
        const a: Int;
    }
}

