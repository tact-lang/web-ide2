========================================================================
Contract with some optionals
========================================================================
primitive Int;

contract Foo {
    Bar: Int;
    Baz: Int?;
    balance: uint32 as coins;
    Start: Int = 0;
}
------------------------------------------------------------------------
primitive Int;

contract Foo {
    Bar: Int/*  as int257 */;
    Baz: Int?;
    balance: uint32 as coins;
    Start: Int/*  as int257 */ = 0;
